<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_title"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'd love to know how you discovered our app to help us improve our reach and services!"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <RadioGroup
                android:id="@+id/surveyRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_play_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_1"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/radio_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_2"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/radio_social_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_3"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/radio_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_4"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/radio_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_5"
                    android:textSize="16sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_option_6"
                    android:textSize="16sp"
                    android:padding="12dp" />

            </RadioGroup>

            <EditText
                android:id="@+id/otherEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please specify (optional)"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_submit"
                style="@style/PrimaryButton"
                android:layout_marginTop="16dp" />

            <!-- Thank You Card (Initially Hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/thankYouCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Success"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thank_you_survey"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_color"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your feedback helps us grow and serve you better!"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
